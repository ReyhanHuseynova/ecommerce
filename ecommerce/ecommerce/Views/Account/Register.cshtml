@model RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Register Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/admin/css/StyleSheet.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link src="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
     <!-- //web font -->
</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1>Register Form</h1>
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form  method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <input style="margin-bottom:26px" class="text" asp-for="Name" placeholder="Name" required="">
                    <input style="margin-bottom:26px" class="text" asp-for="Surname" placeholder="Surname" required="">
                    <input class="text" asp-for="Username" placeholder="Username" required="">
                    <input class="text email" asp-for="Email" placeholder="Email" required="">
                    <input class="text"asp-for="Password" placeholder="Password" required="">
                    <input class="text w3lpass" asp-for="CheckPassword" placeholder="Confirm Password" required="">
                    <div class="wthree-text">
                        <label class="anim">
                            <input type="checkbox" class="checkbox" required="">
                            <span>I Agree To The Terms & Conditions</span>
                        </label>
                        <div class="clear"> </div>
                    </div>
                    <button type="submit">SIGNUP</button>
                </form>
                <p>Don you have an Account? <a asp-action="Login"> Login Now!</a></p>
            </div>
        </div>
      
        
        <ul class="colorlib-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
</body>
</html>