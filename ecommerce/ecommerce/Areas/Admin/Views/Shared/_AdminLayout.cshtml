<!DOCTYPE html>
<html lang="en">

<head>

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
	<!-- Meta Tags -->
	<meta charset="UTF-8">
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script type="text/javascript" src="~/js/jquery.min.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
	<script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>
	<!-- Title -->
	<title>Create an E-Commerce Website using HTML, CSS and JS</title>
	<!-- Style Sheet -->
	<link rel="stylesheet" type="text/css" href="~/admin/css/style.css" />

</head>
<body>

	<header>
		<div class="container">
			<div class="brand">
				<div class="logo">
					<a href="index.html">
						<img src="~/img/icons/online_shopping.png">
						<div class="logo-text">
							<p class="big-logo">Ecommerce</p>
							<p class="small-logo">online shop</p>
						</div>
					</a>
				</div> <!-- logo -->
				<div class="shop-icon">
					<div class="dropdown">
						<img src="~/img/icons/account.png">
						<div class="dropdown-menu">
							<ul>
								<li><a asp-controller="Account" asp-action="Index">My Account</a></li>
								@*<li><a asp-controller="">Settings</a></li>*@
								<li><a href="#">Logout</a></li>
							</ul>
						</div>
					</div>
				</div> <!-- shop icons -->
			</div> <!-- brand -->
		</div> <!-- container -->
	</header> <!-- header -->
	<main>

		<div class="main-content">
			<div class="sidebar">
				<h3>Menu</h3>
				<ul>
					<li><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
					<li><a asp-controller="Orders" asp-action="Index">Order</a></li>
					<li><a asp-controller="Products" asp-action="Index">Product</a></li>
					<li><a asp-controller="Categories" asp-action="Index">Category</a></li>
					<li><a asp-controller="Stocks" asp-action="Index">Stock</a></li>
					<li><a asp-controller="AdminContact" asp-action="Index">Contact</a></li>
					<li><a asp-controller="Users" asp-action="Index">Users</a></li>
				</ul>
			</div>
		
           @RenderBody()
		</div>
		
	</main>

	<footer>
		<div class="container">
			<div class="footer-bar">
				<div class="copyright-text">
					<p>Copryright 2020 - All Rights Reserved</p>
				</div>
			</div> <!-- Footer Bar -->
		</div>
	</footer> <!-- Footer Area -->
	@RenderSection("Scripts",false)

</body>

</html>