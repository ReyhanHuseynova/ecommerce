@model Product
<div class="content">
    <h3>Product</h3>
    <div class="content-data">
        <div class="col-11">

            <form method="post" enctype="multipart/form-data" >
                <h4>Add Product</h4>
                <div class="form-inline">
                    <div class="form-group">
                        <label asp-for="ProductName"> </label>
                        <input asp-for="ProductName">
                        <span class="text-danger" asp-validation-for="ProductName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description"> </label>
                    <textarea style="resize:none" asp-for="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Category select</label>
                   @* <select class="form-control" name="categoryId">
                        @foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }

                    </select>*@
                    <select class="form-control" name="categoryId">
                        @foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>

                </div>

                
                <div class="mb-3">
                    <label class="form-label" asp-for="Photo"></label>
                    <input multiple accept="image/*" asp-for="Photo" class="form-control">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
               
                
                
                <div class="form-group">
                    <button type="submit">Add Product</button>
                  
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}