@model RegisterVM

    <div class="col-md-10 ">
        <div class="x_panel">
            <div class="card-header d-flex justify-content-between ">
                <h5 class="mb-0">User Create</h5>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>


            <div class="x_content">

                <form class="form-label-left input_mask" method="post">

                    <div class="col-md-12 col-sm-12  form-group has-feedback">
                        <input asp-for="Name" class="form-control has-feedback-left" placeholder="Name">
                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Name" class="text-danger"></span>


                    </div>

                    <div class="col-md-12 col-sm-12  form-group has-feedback">
                        <input asp-for="Surname" class="form-control has-feedback-left" placeholder="Surname">
                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 col-sm-12  form-group has-feedback">
                        <input asp-for="Username" class="form-control has-feedback-left" placeholder="Username">
                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>


                    <div class="col-md-12 col-sm-12  form-group has-feedback">
                        <input asp-for="Email" class="form-control has-feedback-left" placeholder="Email">
                        <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div for="exampleFormControlSelect1" class="col-md-12 col-sm-12  form-group has-feedback">
                        <select class="form-control" name="roleName">

                            
                            <option value="Admin">Admin</option>
                            <option value="Member">Member</option>
                        </select>
                    </div>

                    <div class="col-md-12 col-sm-12  form-group has-feedback">
                        <input asp-for="Password" class="form-control  has-feedback-left" placeholder="Password">
                        <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 col-sm-12  form-group has-feedback">
                        <input asp-for="CheckPassword" class="form-control  has-feedback-left" placeholder="CheckPassword">
                        <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="CheckPassword" class="text-danger"></span>
                    </div>





                    <div class="ln_solid"></div>
                    <div class="form-group row ">
                        <div class="col-md-9 col-sm-9  offset-md-3 d-flex justify-content-end">

                            <button  type="submit" class="btn btn-warning"><i class="bi bi-upload"></i> Submit</button>
                            <a style="margin-left:5px" asp-action="Index" class="btn btn-dark"><i class="bi bi-backspace-fill"></i> Go Back</a>

                        </div>

                    </div>

                </form>
            </div>
        </div>

    </div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}